<h1>Matches#index</h1>
<p>Find me in app/views/matches/index.html.erb</p>

<% @matches.each do |match| %>
  <% if match.away_team == nil && match.home_team != @team%>
    <div class= "mb-5">
      <%# <% raise %>
      <h2><%=match.home_team.team_name %></h2>
      <h3><%=match.field.name%></h3>
      <% if user_signed_in? %>
        <% captain_team = Team.find_by(user: current_user) %>
          <% if captain_team != nil %>
            <%= link_to "accept this challenge", accept_challenge_path(match), method: :patch %>
            <%= link_to "view team info", team_path(match.home_team) %>
          <% else %>
            <%= link_to "view team info", team_path(match.home_team) %>
          <% end %>
      <% else %>
        <%= link_to "accept this challenge", new_user_session_path %>
        <%= link_to "view team info", team_path(match.home_team) %>
      <% end %>
    </div>
  <% end %>
<% end %>

