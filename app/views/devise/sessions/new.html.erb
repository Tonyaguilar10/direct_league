  <div class="forms">
    <%= image_tag "LogoDirectLeague.svg", class: "form-logo" %>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    placeholder: 'Email',
                    label:false,
                    class: "form-input" %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    placeholder: 'Password',
                    label:false,
                    class: "form-input" %>
      </div>
        <br>
      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "submit-simple-form" %>
      </div>
    <% end %>
