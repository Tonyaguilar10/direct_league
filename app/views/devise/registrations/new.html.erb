<div class="form-container">
<br>
<br>
<br>
<br>
<br>
<br>
  <div class="forms">
    <%= image_tag "LogoDirectLeague.svg", class: "form-logo" %>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "name" },
                    placeholder: 'Name',
                    label:false,
                    class: "form-input"%>
        <%= f.input :last_name,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "last name" },
                    placeholder: 'Last Name',
                    label:false,
                    class: "form-input"%>
        <%= f.input :username,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "username" },
                    placeholder: 'Username',
                    label:false,
                    class: "form-input"%>
        <%= f.input :age,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "age" },
                    placeholder: 'Age',
                    label:false,
                    class: "form-input"%>
        <%= f.input :gender, collection: %w[Male Female Non-binary],
                    required: true,
                    autofocus: true,
                    prompt: 'Gender',
                    label:false,
                    input_html: { autocomplete: "gender" },
                    class: "form-input"%>
    <div class="mb-3">
        <%= f.country_select :country,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "country" },
                    prompt: 'Country',
                    label:false,
                    class: "form-input"%>
    </div>
        <%= f.input :zip_code,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "zip code" },
                    placeholder: 'Zip code',
                    label:false,
                    class: "form-input"%>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    placeholder: 'Email',
                    label:false,
                    class: "form-input"%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" },
                    placeholder: 'Password',
                    label:false,
                    class: "form-input"%>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" },
                    placeholder: 'Password',
                    label:false,
                    class: "form-input"%>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up" , class: "submit-simple-form" %>
      </div>
    <% end %>
  </div>
  <br>
    <%= render "devise/shared/links"%>
<br>
<br>
<br>
</div>
