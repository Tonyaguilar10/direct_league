<div class="form-container">
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
    <div class="forms">
    <%= image_tag "LogoDirectLeague.svg", class: "form-logo" %>
      <%= simple_form_for(@team) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :team_name,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "Team name" },
                    placeholder: 'Team name',
                    label:false,
                    class: "form-input" %>
        <%= f.input :city,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "Team City" },
                    placeholder: 'Team City',
                    label:false,
                    class: "form-input" %>
        <%= f.input :zip_code,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "Team zip Code" },
                    placeholder: 'Team zip Code',
                    label:false,
                    class: "form-input" %>
        <%= f.input :logo, as: :file,
                    required: false,
                    autofocus: true,
                    placeholder: 'Team Logo',
                    hint: "*Leave blank to use predetermined logo",
                    label:"Team Logo",
                    class: "form-input"%>
        <%= f.input :banner, as: :file,
                    required: false,
                    autofocus: true,
                    placeholder: 'Team Banner',
                    hint: "*Leave blank to use predetermined banner",
                    label:"Team Banner",
                    class: "form-input"%>
        <%= f.input :size,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "Size" },
                    placeholder: 'Size of the team',
                    label:false,
                    class: "form-input" %>
      </div>

        <div class="form-actions">
        <%= f.button :submit, "Update Team" , class: "submit-simple-form" %>
        </div>
      <% end %>
    </div>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
</div>
